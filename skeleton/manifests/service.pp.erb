# == Class <%= metadata.name %>::service
#
# This class is meant to be called from <%= metadata.name %>
# It ensure the service is running
#
class <%= metadata.name %>::service {
  service { $<%= metadata.name %>::params::service_name:
    ensure     => running,
    enable     => true,
    hasstatus  => true,
    hasrestart => true,
  }
}
