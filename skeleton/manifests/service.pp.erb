# == Class <%= metadata.name %>::service
#
# This class is meant to be called from <%= metadata.name %>
# It ensure the service is running
#
class <%= metadata.name %>::service {

  unless $caller_module_name == $module_name {
    fail("private class called from ${caller_module_name}.")
  }

  service { $::<%= metadata.name %>::service_name:
    ensure     => running,
    enable     => true,
    hasstatus  => true,
    hasrestart => true,
  }
}
